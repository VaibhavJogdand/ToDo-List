exports.getDate = function(){
  let options = { weekday: 'long', month: 'long', day: 'numeric' };
  let today = new Date();
  let day = today.toLocaleDateString("en-IN", options);
  return day;
};



exports.getDay = function(){
  let options = { weekday: 'long'};
  let today = new Date();
  let day = today.toLocaleDateString("en-IN", options);
  return day;
};
